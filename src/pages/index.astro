---
// Página principal del evento - Landing page con diseño del flyer
import recurso1 from '../assets/recurso1.png';
import logotipo from '../assets/Logotipo.png';
import djGian from '../assets/dj gian.png';
import djGianLogo from '../assets/dj gian logo.png';
import fondo1 from '../assets/GRUNGE.png';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="¡CELEBREMOS JUNTOS! Nuestro aniversario MIDAS - SAB 4 OCT con DJ GIAN" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<title>¡CELEBREMOS JUNTOS! - Aniversario MIDAS</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	<link rel="preload" as="image" href={recurso1.src} />
	<link rel="preload" as="image" href={logotipo.src} />
	<link rel="preload" as="image" href={djGian.src} />
	<link rel="preload" as="image" href={djGianLogo.src} />
	<link rel="preload" as="image" href={fondo1.src} />

</head>
<body style={`background: #060f24 url(${fondo1.src}) no-repeat center center fixed; background-size: cover;`}>
	<main class="main-container">
		<!-- Contenido principal del evento -->
		<div class="event-content">


			<!-- Contenido central -->
			<div class="center-content">
				<div>
					<img src={recurso1.src} alt="Recurso 1" style="max-width: 350px; height: auto;" />
				</div>
				
				<div class="subtitle-section">
					<p class="font-sans text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-500">
						Nuestro aniversario
					</p>

					<div class="midas-logo-center">
						<img src={logotipo.src} alt="MIDAS Logo" class="midas-logo-main">
					</div>
				</div>

				<div class="artist-section">
					<div class="artist-logo">
						<img src={djGian.src} alt="DJ GIAN" class="dj-photo">
					</div>
				</div>

				<div class="date-section">
					<p class="date-label">FECHA</p>
					<p class="date-number">04</p>
					<p class="date-month">OCTUBRE</p>
				</div>


				<button class="register-btn" id="register-button">
					Regístrate aquí
				</button>

				<div class="info-section">
					<p class="info-text">
						Ingresa tu DNI, nombres y apellidos, número de<br>
						WhatsApp y tu sede.
					</p>
				</div>
			</div>

			<!-- Artista invitado -->
			<div class="artist-section">
				<div class="artist-logo">
					<img src={djGianLogo.src} alt="DJ GIAN Logo" class="dj-logo-small">
				</div>
			</div>
		</div>
	</main>
</body>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: 'Inter', sans-serif;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		min-height: 100vh; /* mantiene altura mínima */
		overflow-x: hidden; /* solo oculta horizontal */
		overflow-y: auto;   /* permite scroll vertical */
		position: relative;
	}

	html {
		overflow-x: hidden;
		overflow-y: auto;
	}

			
	.main-container {
		min-height: 100vh;  /* en vez de height fijo */
		position: relative;
		display: flex;
		flex-direction: column; /* apila todo verticalmente */
		align-items: center;
		justify-content: flex-start; /* empieza desde arriba */
		padding: 2rem;
	}

	.event-content {
		width: 100%;
		max-width: 500px;
		height: 100%;
		position: relative;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		text-align: center;
		color: white;
	}



	.center-content {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 2rem 0;
	}

	.main-title {
		font-size: 3.5rem;
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 1.5rem;
		text-shadow: 0 4px 8px rgba(0,0,0,0.5);
		letter-spacing: -0.02em;
	}

	.subtitle-section {
		margin-bottom: 2rem;
	}

	.anniversary-text {
		font-size: 1.5rem;
		font-weight: 500;
		margin-bottom: 0.5rem;
		opacity: 0.95;
	}

	.midas-logo-center {
		display: flex;
		justify-content: center;
		margin-bottom: 1.5rem;
	}

	.midas-logo-main {
		height: 120px;
		width: auto;
		filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
	}

	.solutions-text {
		font-size: 0.9rem;
		font-weight: 600;
		letter-spacing: 0.2em;
		background: linear-gradient(45deg, #FFD700, #FFA500);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin-top: -0.5rem;
	}

	.date-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		margin-bottom: 0.5rem; /* antes estaba en 2rem */
		margin-top: -6rem;     /* empuja hacia arriba */
	}

	.date-label {
		font-size: 1rem;
		font-weight: 700;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		color: #fff;
	}

	.date-number {
		font-size: 6rem;
		font-weight: 900;
		color: #fff;
		line-height: 1;
		margin-top: -0.8rem; 
	}

	.date-month {
		font-size: 1.2rem;
		font-weight: 300;
		text-transform: uppercase;
		color: #fff;
		margin-top: -0.8rem; 
	}
	.date-text {
		font-size: 2.5rem;
		font-weight: 900;
		background: linear-gradient(45deg, #FFD700, #FFA500);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: 0 2px 4px rgba(0,0,0,0.3);
		letter-spacing: 0.05em;
	}

	.register-btn {
		background: linear-gradient(45deg, #ffffff, #ffffff);
		color: #000;
		border: none;
		padding: 1rem 2.5rem;
		border-radius: 50px;
		font-size: 1.2rem;
		font-weight: 700;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-bottom: 1.5rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		box-shadow: 0 8px 25px rgba(253, 253, 253, 0.4);
	}

	.register-btn:hover {
		transform: translateY(-3px);
		box-shadow: 0 12px 35px rgba(228, 228, 227, 0.6);
		background: linear-gradient(45deg, #ffffff, #ffffff);
	}

	.register-btn:active {
		transform: translateY(-1px);
	}

	.info-section {
		margin-bottom: 1rem;
	}

	.info-text {
		font-size: 0.9rem;
		font-weight: 400;
		opacity: 0.9;
		line-height: 1.4;
	}

	.artist-section {
		text-align: center;
		margin-bottom: 1rem;
		margin-top: -1rem;
	}

	.artist-label {
		font-size: 0.9rem;
		font-weight: 500;
		margin-bottom: 0.5rem;
		opacity: 0.9;
	}

	.artist-logo {
		display: flex;
		justify-content: center;
	}

	.dj-logo {
		height: 80px;
		width: auto;
	}

	.dj-photo {
		height: 400px; /* más grande que antes */
		width: auto;
	}

	.dj-logo-small {
		height: 40px; /* más pequeño que antes */
		width: auto;
		opacity: 0.9; /* opcional: para diferenciarlo un poco */
		margin-top: -1rem; /* empuja hacia arriba */
	}


	/* Responsive */
	@media (max-width: 768px) {
		.main-container {
			padding: 1rem;
		}

		.main-title {
			font-size: 2.8rem;
		}

		.midas-text {
			font-size: 2.2rem;
		}

		.date-text {
			font-size: 2rem;
		}

		.register-btn {
			padding: 0.8rem 2rem;
			font-size: 1rem;
		}

		.midas-logo {
			height: 60px;
		}

		.midas-logo-main {
			height: 80px;
		}

		.dj-logo {
			height: 70px;
		}

		.info-text {
			font-size: 0.8rem;
		}
	}

	@media (max-width: 480px) {
		.main-title {
			font-size: 2.2rem;
		}

		.midas-text {
			font-size: 1.8rem;
		}

		.date-text {
			font-size: 1.6rem;
		}

		.register-btn {
			padding: 0.7rem 1.5rem;
			font-size: 0.9rem;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const registerButton = document.getElementById('register-button');
		if (registerButton) {
			registerButton.addEventListener('click', function() {
				window.location.href = '/registro';
			});
		}
	});
</script>
