---
export interface Props {
  title?: string;
}
const { title = "EventoQR - Generador de QR" } = Astro.props;

// Importa Tailwind global
import "../styles/global.css";
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Genera códigos QR para eventos de manera fácil y rápida" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="font-['Inter'] bg-gradient-to-b from-[#060f24] via-[#0a1a3a] to-[#060f24] text-white min-h-screen overflow-x-hidden">
    <slot />
  </body>
</html>
